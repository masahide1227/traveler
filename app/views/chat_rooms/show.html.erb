<div class="chat-room">
  <h1>チャットルーム: <%= @chat_room.name %></h1>

  <div class="direct-messages">
    <% @chat_room.direct_messages.each do |direct_message| %>
      <div class="message">
        <p><strong><%= direct_message.user.name %>:</strong> <%= direct_message.body %></p>
      </div>
    <% end %>
  </div>

  <div class="new-direct-message">
    <%= form_with(model: [@chat_room, @chat_room.direct_messages.build], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :body, "メッセージ" %>
        <%= form.text_area :body, rows: 3, class: "form-control", maxlength: 140 %>
      </div>
      <%= form.submit "送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>




